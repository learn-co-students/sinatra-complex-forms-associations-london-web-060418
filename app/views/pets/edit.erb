<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="post">
  <label>Name:</label>

  <br></br>

  <input id="pet_name" type="text" name="pet[name]" value="<%=@pet.name%>">

  <br></br>

  <label>Choose an existing owner:</label>

  <br></br>

  <% @owners.each do |owner|%>
    <input type="radio" name="owner[id]" id="<%= owner.id %>" value="<%=owner.id%>" <%='checked' if @pet.owner.name == owner.name %>></input>
    <label for="<%=owner.id%>"><%=owner.name%></label>
  <% end %>

  <br></br>

  <label>and/or, create a new owner:</label>
  <br></br>
  <label>Name:</label>
    <input id="owner_name" type="text" name="owner[name]"></input>
  <br></br>
  <input type="submit" value="Update Pet">
</form>
