<h1>Edit this Pet</h1>

<form action="/pets" method="post">
  <input type="hidden" name="_method" value="patch" />
  <label for=>Name:</label>
  <input type="text" name="pet[name]" value="<%= @pet.name %>"id="pet_name">
  <br></br>

  <label>Choose an existing owner: </label>
  <br></br>

  <% @owners.each do |owner| %>
    <label for="<%= owner.id %>"><%= owner.name %></label>
    <input type="radio" id="<%= owner.id %>" value="<%= owner.id %>" name="pet[owner_id]" <%= @pet.owner_id == owner.id ? "checked" : "" %>/>
  <% end %>

  <br></br>
  <label for="owner_name">Or create a new Owner: </label>
  <br></br>

  <input type="text" id="owner_name" name="owner[name]" />

  <br></br>
  <input type="submit" id="submit" value="Update Pet"/>
</form>
