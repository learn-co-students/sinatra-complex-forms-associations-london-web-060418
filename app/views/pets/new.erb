<h1>Create a new Pet</h1>

<form action= "/pets" method="post">
  <label>Name:</label>
  <br></br>
  <input type="text" name="pet[name]" id="pet_name">
  <br></br>

   <br></br>

   <% @owners.each do |owner|%>
     <input type="checkbox" name="owner[id]" id="<%= owner.id%>" value="<%=owner.id%>" </input>
     <label for="<%= owner.id%>"><%=owner.name%></label>
   <%end%>

   <br></br>

  <label>and/or, create a new owner:</label>
  <br></br>
  <label>Name:</label>
    <input id="owner_name" type="text" name="owner[name]"></input>
    <br></br>
    <input type="submit" value="Create Pet"/>
</form>

